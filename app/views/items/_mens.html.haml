.contents__items
  .contents__items__main-box
    .contents__items__main-box__items-header 
      %h3.contents__items__main-box__items-header__title メンズ新着アイテム
      = link_to 'もっと見る >', '#', class: 'contents__items__main-box__items-header__button'
    %ul.contents__items__main-box__items
      - @mens.each do |mens|
        %li.contents__items__main-box__items__list
          = link_to item_show_path(mens.id), class: 'contents__items__main-box__items__list__link' do
            .contents__items__main-box__items__list__link__box
              .contents__items__main-box__items__list__link__box__img-box
                - mens.images.each do |image|
                  = image_tag image.src.url
                .contents__items__main-box__items__list__link__box__img-box__price-box
                  ¥
                  %span= mens.price
                .contents__items__main-box__items__list__link__box__desc-box
                  %span= mens.name