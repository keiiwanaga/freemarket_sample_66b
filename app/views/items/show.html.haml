= render partial: './items/header'
.product
  .product__item
    %h1.product__item__name 
      = @item.name
    .product__item__main
      .product__item__main__photo
        - @item.images.each do |image|
          = image_tag image.src.url
        .product__item__main__photo__bottom

      .product__item__main__detail
        .product__item__main__detail__tbody
          .product__item__main__detail__tbody__tr
            .product__item__main__detail__tbody__tr__th 出品者
            .product__item__main__detail__tbody__tr__td
              .product__item__main__detail__tbody__tr__td__name
                = @item.user.nickname
              .product__item__main__detail__tbody__tr__td__icon
                .product__item__main__detail__tbody__tr__td__icon__rating
                  %i.product__item__main__detail__tbody__tr__td__icon__rating.fas.fa-laugh
                  %span 36
                .product__item__main__detail__tbody__tr__td__icon__rating
                  %i.product__item__main__detail__tbody__tr__td__icon__rating.fas.fa-meh
                  %span 0
                .product__item__main__detail__tbody__tr__td__icon__rating
                  %i.product__item__main__detail__tbody__tr__td__icon__rating.fas.fa-frown
                  %span 0


              
          .product__item__main__detail__tbody__tr-2
            .product__item__main__detail__tbody__tr-2__th カテゴリー
            .product__item__main__detail__tbody__tr-2__td
              = @items.category.parent.parent.name
              %br
              = @items.category.parent.name
              %br
              = @items.category.name
          .product__item__main__detail__tbody__tr-4
            .product__item__main__detail__tbody__tr-4__th 商品の状態
            .product__item__main__detail__tbody__tr-4__td 
              = @items.condition.name
          .product__item__main__detail__tbody__tr-5
            .product__item__main__detail__tbody__tr-5__th 配送料の負担
            .product__item__main__detail__tbody__tr-5__td 
              = @items.delivery_burden.name
          .product__item__main__detail__tbody__tr-7
            .product__item__main__detail__tbody__tr-7__th 配送元地域
            .product__item__main__detail__tbody__tr-7__td
              = @items.prefecture.name
          .product__item__main__detail__tbody__tr-8
            .product__item__main__detail__tbody__tr-8__th 発送日の目安
            .product__item__main__detail__tbody__tr-8__td 
              = @items.delivery_day.name

    .product__item__price-box
      %span.product__item__price-box__price 
        = @item.price
      %span.product__item__price-box__tax (税込)
      %span.product__item__price-box__shipping-fee 送料込み
    = link_to item_confirm_path(@item.id) do
      .product__item__buy-btn
        購入画面に進む
    = link_to item_path(@item), method: :delete do
      .product__item__delete-btn
        削除する

    .product__item__description
      %p.product__item__description__inner
        = @item.description

    .product__item__text-box
      .product__item__text-box__left
        %button.product__item__text-box__left__like{type: "button"}
          %i.product__item__text-box__left__like.far.fa-heart
            %span いいね!
            %span 0
        .product__item__text-box__left__report
          %i.product__item__text-box__left__report.far.fa-flag
            %span 不適切な商品の報告
      .product__item__text-box__right
        %i.product__item__text-box__right.fas.fa-lock
        %span あんしん・あんぜんへの取り組み



  .product__detail-message
    .product__detail-message__box
      .product__detail-message__box__content
        %form.product__detail-message__box__content__message-form{action: "https://www.mercari.com/jp/comment/add/", method: "POST"}
          %p 相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
          %textarea.product__detail-message__box__content__message-form__textarea{type: "text"}
          %button.product__detail-message__box__content__message-form__btn-gray{type: "submit"}
            %span コメントする 

  .product__nav-item
    .product__nav-item__box
      .product__nav-item__box__link
        ブルゾン
        .product__nav-item__box__link.fas.fa-angle-left
  
      .product__nav-item__box__link-2
        ワンピース
        .product__nav-item__box__link-2.fas.fa-angle-right

  .product__media
    .product__media__box
      %i.product__media__box__.fab.fa-facebook-square
      %i.product__media__box__.fab.fa-twitter-square
      %i.product__media__box__.fab.fa-pinterest-square

