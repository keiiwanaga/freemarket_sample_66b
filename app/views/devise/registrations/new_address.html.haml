%main.page-three
  %h2 発送元・お届け先住所入力
  = form_for @address do |f|
    = render "devise/shared/error_messages", resource: @address
    %form
      .contents
        .form-content
          = f.label :お名前
          %span 必須
          %br/
          = f.text_field :address_firstname, placeholder: "例) 山田"
          = f.text_field :address_lastname, placeholder: "例) 彩"
        .form-content
          = f.label :お名前カナ
          %span 必須
          %br/
          = f.text_field :address_kana_firstname, placeholder: "例) ヤマダ"
          = f.text_field :address_kana_lastname, placeholder: "例) アヤ"
        .form-content
          = f.label :郵便番号
          %span 必須
          %br/
          = f.text_field :zipcode, placeholder: "例) 123-4567"
        .form-content
          = f.label :都道府県
          %span 必須
          %br/
          = f.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt:"---"
        .form-content
          = f.label :市区町村
          %span 必須
          %br/
          = f.text_field :municipalities, placeholder: "例) 横浜市緑区"
        .form-content
          = f.label :番地
          %span 必須
          = f.text_field :address
        .form-content
          = f.label :建物名
          %span.any 任意
          %br/
          = f.text_field :building, placeholder: "例) 柳ビル103"
        .form-content
          = f.label :電話
          %span.any 任意
          %br/
          = f.text_field :phone_number, placeholder: "例) 09012345678"
        = f.submit "次へ進む", class:"button"
