= render partial: './items/header'

- breadcrumb :cards
= render "layouts/breadcrumbs"

.main1
  = render partial: './mypages/side-bar'
  %main.page-four
    %h2 お支払い方法
    %form
      .contents
        .form-content
          %label{for: "payment-card"} カード番号
          %span 必須
          %input{name: "payment-card", placeholder: "半角数字のみ", type: "text", value: ""}/
          %ul
            %li
              %img{src: "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2091621301", width: "49", height: "20"}/
            %li
              %img{src: "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2091621301", width: "49", height: "20"}/
            %li
              %img{src: "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2091621301", width: "49", height: "20"}/
            %li
              %img{src: "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2091621301", width: "49", height: "20"}/
            %li
              %img{src: "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2091621301", width: "49", height: "20"}/
            %li
              %img{src: "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2091621301", width: "49", height: "20"}/
            %li
              %img{src: "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2091621301", width: "49", height: "20"}/
        .form-content
          %label{for: "payment-card-expire"} 有効期限
          %span 必須
          .credit-card
            %select{name: "payment-card-expire-mm"}
              %option{value: ""} --
              %option{value: "01"} 01
              %option{value: "02"} 02
              %option{value: "03"} 03
              %option{value: "04"} 04
              %option{value: "05"} 05
              %option{value: "06"} 06
              %option{value: "07"} 07
              %option{value: "08"} 08
              %option{value: "09"} 09
              %option{value: "10"} 10
              %option{value: "11"} 11
              %option{value: "12"} 12
            %span 月
            %select{name: "payment-card-expire-yy"}
              %option{value: ""} --
              %option{value: "20"} 20
              %option{value: "21"} 21
              %option{value: "22"} 22
              %option{value: "23"} 23
              %option{value: "24"} 24
              %option{value: "25"} 25
              %option{value: "26"} 26
              %option{value: "27"} 27
              %option{value: "28"} 28
              %option{value: "29"} 29
              %option{value: "30"} 30
            %span 年
        .form-content
          %label{for: "security-code"} セキュリティコード
          %span 必須
          %input{name: "security-code", placeholder: "カード背面4桁もしくは3桁の番号", type: "text", value: ""}/
          .form-content__div
            %link_to{href: "", target: "_blank", class: "back"}
              %i.fas.fa-question-circle
              カード裏面の番号とは？
        %button{type: "submit"} 追加する
= render partial: './items/footer'